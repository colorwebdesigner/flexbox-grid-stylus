// The Grid
.grid
  box-sizing: border-box
  overflow: hidden

  +variant(fixed)
    margin: 0 auto
    max-width: 1200px
    width: 100%

  +variant(flex-cols)
    .grid__col
      display: flex

  +has(row)
    box-sizing: border-box
    display: flex
    flex: 0 1 100%
    flex-direction: row
    flex-wrap: wrap
    list-style: none
    margin: -1rem -.5rem 1rem -.5rem
    padding: 0

    +variant(no-gutters)
      margin: 0

  +has(col)
    box-sizing: border-box
    flex: 0 0 100%
    padding: 1rem .5rem 0 .5rem

    +variant(no-gutters)
      padding: 0

// The column system
make-grid($breakpoints, $columns)