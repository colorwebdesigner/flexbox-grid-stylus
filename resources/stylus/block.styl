.Block
  overflow: hidden
  padding: 1rem
  width: 100%

  &__content
    word-wrap: break-word
    overflow: hidden
    line-height: 1.5rem
    font-weight: 300

  &:after
    display: block
    content: ""
    height: 0
    visibility: hidden

.Section--dark
  .Block
    background-color: rgba(255, 255, 255, 0.2)

    &__content
      color: #e6e6e6

.Section--light

  .Block
    background-color: rgba(0, 0, 0, 0.2)

    &__content
      color: #1a1a14


